<Window x:Name="MyMainWindow" x:Class="MongoConnect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MongoConnect"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="WindowLoaded">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="4" Margin="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Button Cursor="Hand" Grid.Row="0" Click="Button_Click" Padding="40 20" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Connect" Margin="0,10,0,0" ></Button>
                <DataGrid x:Name="MyDG" Grid.Row="1" Margin="20">

                </DataGrid>
            </Grid>

        </Border>

    </Grid>
</Window>
